<Page x:Class="DetskiySad.UserPages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetskiySad.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>


        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="96,99,0,0" Height="341" Width="358">


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Введите логин:"
                           Width="150" />
                <TextBox Name="TxbLogin" TextChanged="TxbLogin_TextChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Введите пароль:"
                           Width="150" />
                <PasswordBox Name="PsbPassword"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="BtnLogin"
                        Click="BtnLogin_Click" Height="33">
                    <TextBlock Text="Войти"/>
                </Button>

            </StackPanel>

        </StackPanel>


    </Grid>
</Page>
