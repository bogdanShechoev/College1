<Page x:Class="DetskiySad.UserPages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DetskiySad.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="Меню"
               Style="{StaticResource LabelMenu}"
               Grid.ColumnSpan="2"
               VerticalAlignment="Top"               
               HorizontalAlignment="Center"
               Height="40" Width="61"/>

        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    Orientation="Vertical">
            <Button Style = "{StaticResource MenuButton}"
                    Margin="150,50,10,10"
                    Content="Список студентов"
                    Name="ListKids"
                    Click="ListKids_Click"/>            

            <Button Style="{StaticResource MenuButton}"
                    Margin="150,10,10,10"
                    Content="Добавить студента"
                    Name="AddKid" Click="AddKid_Click"/>      


        </StackPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Vertical">
            
            <Button Margin="-100,50,10,0"
                    Style="{StaticResource MenuButton}"
                    Content="Список сотрудников"
                    Name="ListTeachers"
                    Click="ListTeachers_Click"
                    />
            <Button Style="{StaticResource MenuButton}"
                    Margin="-100,20,10,0"
                    Content="Добавить сотрудника"
                    Name="AddTeacher"
                    Click="AddTeacher_Click"/>      
                        

        </StackPanel>

    </Grid>
</Page>
